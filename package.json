{
  "name": "roberto-sanchez-reolid-web",
  "type": "module",
  "version": "1.0.0",
  "description": "Sitio web académico del Dr. Roberto Sánchez Reolid",
  "author": "Roberto Sánchez Reolid",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --config=jest.config.js",
    "test:build": "npm run build && NODE_OPTIONS=--experimental-vm-modules jest --config=jest.config.js",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules jest --config=jest.config.js --ci",
    "test:a11y": "npx serve dist -s & sleep 5 && npx pa11y-ci --config .pa11yci.json; kill $!",
    "check:chromium": "node scripts/check-chromium.js",
    "check:a11y": "npm run build && npm run test:a11y",
    "pre-deploy": "node scripts/pre-deploy-check.js",
    "pre-deploy:a11y": "npm run build && node scripts/pre-deploy-check.js --with-a11y",
    "deploy": "npm run pre-deploy && npm run build",
    "deploy:a11y": "npm run pre-deploy:a11y && npm run build",
    "test:pages": "NODE_OPTIONS=--experimental-vm-modules jest --config=jest.config.js test/pages.test.js test/seo.test.js",
    "test:integration": "node scripts/test-integration.js",
    "check:performance": "npx lighthouse-ci http://localhost:4321 --config=./.github/lighthouse-config.json",
    "verify:telegram": "node scripts/verify-telegram-config.js",
    "import:env:netlify": "node scripts/import-env-to-netlify.js",
    "update:scholar": "node scripts/scrape-scholar-ultra-optimized.js",
    "scholar:scrape": "node scripts/scrape-scholar-ultra-optimized.js",
    "scholar:verify": "node scripts/verify-complete-system.js",
    "scholar:summary": "node scripts/generate-executive-summary.js",
    "scholar:setup": "node scripts/setup-env-vars.js"
  },
  "dependencies": {
    "@astrojs/markdown-remark": "^6.3.6",
    "@astrojs/mdx": "^4.3.4",
    "dotenv": "^16.5.0",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "serpapi": "^2.1.0"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^6.0.2",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@tailwindcss/typography": "^0.5.16",
    "astro": "^5.13.2",
    "babel-jest": "^29.7.0",
    "chalk": "^5.4.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "jsdom": "^26.1.0",
    "pa11y-ci": "^2.4.2",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.3.4"
  }
}
