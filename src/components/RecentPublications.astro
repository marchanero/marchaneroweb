---
// Componente para mostrar publicaciones recientes en la página de inicio
import type { Publication } from '../types/Scholar';

interface Props {
  publications: Publication[];
  limit?: number;
  showTitle?: boolean;
  title?: string;
}

const { 
  publications, 
  limit = 3, 
  showTitle = true,
  title = "Publicaciones Recientes"
} = Astro.props;

const limitedPublications = publications.slice(0, limit);

// Función para obtener icono según tipo de publicación
function getPublicationIcon(type: string) {
  switch (type) {
    case 'journal':
      return '📄';
    case 'conference':
      return '🎤';
    case 'book':
      return '📚';
    case 'thesis':
      return '🎓';
    default:
      return '📄';
  }
}
---

<section class="py-0">
  {showTitle && (
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between mb-6">
      <div class="mb-6 lg:mb-0">
        <div class="flex items-center space-x-4 mb-2">
          <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
            <span class="text-white text-2xl">📚</span>
          </div>
          <div>
            <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white">
              {title}
            </h2>
            <div class="w-16 h-1 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full mt-1"></div>
          </div>
        </div>
        <p class="text-gray-600 dark:text-gray-400 text-lg">Últimas contribuciones científicas</p>
      </div>
      
      <a href="/publicaciones" class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-medium rounded-xl transition-all duration-200 transform hover:scale-105 shadow-lg">
        <span class="mr-2">📄</span>
        Ver todas las publicaciones
      </a>
    </div>
  )}
  
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    {limitedPublications.map((publication, index) => (
      <article class="bg-white/70 dark:bg-gray-800/70 backdrop-blur-sm rounded-2xl border border-gray-200/50 dark:border-gray-700/50 shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group h-full flex flex-col">
        
        <!-- Header de la publicación -->
        <div class="p-6 pb-4">
          <div class="flex items-center justify-between mb-4">
            <span class="inline-flex items-center px-3 py-1.5 bg-blue-50 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 rounded-lg text-sm font-medium border border-blue-200/50 dark:border-blue-700/50">
              <span class="mr-2">{getPublicationIcon('journal')}</span>
              {publication.year}
            </span>
            
            {publication.cited_by?.value > 0 && (
              <div class="flex items-center space-x-1 bg-emerald-50 dark:bg-emerald-900/30 text-emerald-700 dark:text-emerald-300 px-3 py-1.5 rounded-lg text-sm font-medium border border-emerald-200/50 dark:border-emerald-700/50">
                <span class="text-base">📊</span>
                <span>{publication.cited_by.value} citas</span>
              </div>
            )}
          </div>
          
          <!-- Título de la publicación -->
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 leading-tight line-clamp-3 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">
            {publication.link ? (
              <a href={publication.link} target="_blank" rel="noopener noreferrer" class="hover:underline">
                {publication.title}
              </a>
            ) : (
              publication.title
            )}
          </h3>
          
          <!-- Autores -->
          <div class="flex items-center text-sm text-gray-600 dark:text-gray-400 mb-4">
            <div class="w-8 h-8 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center mr-3 flex-shrink-0">
              <span class="text-gray-500 dark:text-gray-400">👤</span>
            </div>
            <span class="line-clamp-2">
              {publication.authors && typeof publication.authors === 'string' 
                ? publication.authors.split(',').length > 2 
                  ? `${publication.authors.split(',')[0].trim()}, et al.` 
                  : publication.authors
                : 'Autores no disponibles'}
            </span>
          </div>
        </div>
        
        <!-- Contenido principal -->
        <div class="px-6 pb-6 flex-grow flex flex-col">
          <!-- Revista/Publicación -->
          <div class="mb-3 p-4 bg-gray-50 dark:bg-gray-700/50 rounded-xl border-l-4 border-blue-500 flex-grow">
            <div class="flex items-start space-x-3">
              <div class="w-6 h-6 bg-blue-100 dark:bg-blue-900/50 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                <span class="text-blue-600 dark:text-blue-400 text-sm">🏛️</span>
              </div>
              <div>
                <p class="text-sm font-medium text-gray-900 dark:text-gray-200 mb-1">Publicado en</p>
                <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-3">
                  {publication.publication || 'Revista no especificada'}
                </p>
              </div>
            </div>
          </div>
          
          <!-- Footer con acciones -->
          {publication.link && (
            <div class="mt-auto pt-4 border-t border-gray-200 dark:border-gray-600">
              <a 
                href={publication.link} 
                target="_blank" 
                rel="noopener noreferrer"
                class="inline-flex items-center justify-center w-full px-4 py-2.5 bg-gradient-to-r from-blue-50 to-purple-50 dark:from-blue-900/30 dark:to-purple-900/30 hover:from-blue-100 hover:to-purple-100 dark:hover:from-blue-900/50 dark:hover:to-purple-900/50 text-blue-700 dark:text-blue-300 font-medium rounded-lg transition-all duration-200 border border-blue-200/50 dark:border-blue-700/50 group/link"
              >
                <span class="mr-2">📖</span>
                <span>Leer publicación</span>
                <svg class="w-4 h-4 ml-2 transition-transform duration-200 group-hover/link:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
              </a>
            </div>
          )}
        </div>
      </article>
    ))}
  </div>
  
  {publications.length === 0 && (
    <div class="text-center py-16">
      <div class="max-w-md mx-auto">
        <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-blue-100 to-purple-100 dark:from-blue-900/50 dark:to-purple-900/50 rounded-2xl flex items-center justify-center">
          <span class="text-3xl">📚</span>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">No hay publicaciones disponibles</h3>
        <p class="text-gray-600 dark:text-gray-400">Las publicaciones se actualizarán pronto.</p>
      </div>
    </div>
  )}
</section>

<style>
  /* Utilidad para truncar texto a múltiples líneas */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* Transiciones suaves para las cards */
  article {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  article:hover {
    transform: translateY(-4px);
  }
  
  /* Mejoras de accesibilidad */
  @media (prefers-reduced-motion: reduce) {
    article {
      transition: none;
    }
    
    article:hover {
      transform: none;
    }
  }
  
  /* Mejoras responsivas */
  @media (max-width: 768px) {
    .line-clamp-3 {
      -webkit-line-clamp: 2;
    }
  }
</style>
