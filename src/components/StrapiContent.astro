---
// Componente para mostrar art√≠culos din√°micos desde Strapi Cloud
import { strapiAPI, getStrapiImageURL, formatStrapiDate } from '../lib/strapi.js';
import type { StrapiArticle } from '../types/Strapi.ts';

interface Props {
  limit?: number;
  featured?: boolean;
  showTitle?: boolean;
  title?: string;
}

const { 
  limit = 3, 
  featured = false,
  showTitle = true,
  title = "Art√≠culos desde Strapi"
} = Astro.props;

// Obtener art√≠culos de Strapi
let articles: StrapiArticle[] = [];
let error: string | null = null;

try {
  const params = {
    populate: ['image'],
    pagination: { pageSize: limit },
    sort: ['publishedAt:desc']
  };
  
  if (featured) {
    params.filters = {
      featured: {
        $eq: true
      }
    };
  }
  
  const response = await strapiAPI.getArticles(params);
  articles = response.data || [];
} catch (err) {
  console.error('Error loading articles from Strapi:', err);
  error = 'Error al cargar los art√≠culos';
}
---

<section class="py-8 sm:py-12">
  {showTitle && (
    <div class="mb-8">
      <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-2">
        {title}
      </h2>
      <p class="text-gray-600 dark:text-gray-400">
        Contenido din√°mico desde Strapi Cloud
      </p>
    </div>
  )}
  
  {error ? (
    <!-- Estado de error -->
    <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-6 text-center">
      <div class="text-red-500 dark:text-red-400 text-sm">
        <svg class="w-8 h-8 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.5 0L4.268 15.5c-.77.833.192 2.5 1.732 2.5z"></path>
        </svg>
        {error}
      </div>
      <p class="text-xs text-gray-500 dark:text-gray-400 mt-2">
        Mostrando contenido est√°tico mientras tanto
      </p>
    </div>
  ) : articles.length === 0 ? (
    <!-- Estado vac√≠o -->
    <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-8 text-center">
      <div class="text-gray-400 dark:text-gray-500">
        <svg class="w-12 h-12 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2.5 2.5 0 00-2.5-2.5H15"></path>
        </svg>
        <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">
          No hay art√≠culos disponibles
        </h3>
        <p class="text-gray-600 dark:text-gray-400">
          Los art√≠culos aparecer√°n aqu√≠ una vez que se publiquen en Strapi
        </p>
      </div>
    </div>
  ) : (
    <!-- Lista de art√≠culos -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {articles.map((article, index) => (
        <article class={`bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden card-hover border border-gray-200/50 dark:border-gray-700/50 animate-fade-in-up`} style={`animation-delay: ${index * 0.1}s`}>
          <!-- Imagen del art√≠culo -->
          {article.attributes.image?.data && (
            <div class="relative h-48 overflow-hidden">
              <img
                src={getStrapiImageURL(article.attributes.image.data)}
                alt={article.attributes.image.data.attributes.alternativeText || article.attributes.title}
                class="w-full h-full object-cover transition-transform duration-300 hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
              {article.attributes.featured && (
                <div class="absolute top-4 right-4 bg-yellow-500 text-white px-2 py-1 rounded-full text-xs font-medium">
                  ‚≠ê Destacado
                </div>
              )}
            </div>
          )}
          
          <!-- Contenido del art√≠culo -->
          <div class="p-6">
            <!-- Metadatos -->
            <div class="flex items-center justify-between mb-3 text-sm text-gray-500 dark:text-gray-400">
              <span>{formatStrapiDate(article.attributes.publishedAt)}</span>
              {article.attributes.year && (
                <span class="bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300 px-2 py-1 rounded">
                  {article.attributes.year}
                </span>
              )}
            </div>
            
            <!-- T√≠tulo -->
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-3 line-clamp-2">
              {article.attributes.title}
            </h3>
            
            <!-- Extracto -->
            {article.attributes.excerpt && (
              <p class="text-gray-600 dark:text-gray-400 text-sm mb-4 line-clamp-3">
                {article.attributes.excerpt}
              </p>
            )}
            
            <!-- Autores y publicaci√≥n -->
            {article.attributes.authors && (
              <p class="text-gray-500 dark:text-gray-500 text-xs mb-2">
                üìù {article.attributes.authors}
              </p>
            )}
            
            {article.attributes.publication && (
              <p class="text-gray-500 dark:text-gray-500 text-xs mb-4 italic">
                üìÑ {article.attributes.publication}
              </p>
            )}
            
            <!-- Etiquetas -->
            {article.attributes.tags && article.attributes.tags.length > 0 && (
              <div class="flex flex-wrap gap-1 mb-4">
                {article.attributes.tags.slice(0, 3).map(tag => (
                  <span class="bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 px-2 py-1 rounded-full text-xs">
                    {tag}
                  </span>
                ))}
              </div>
            )}
            
            <!-- Enlace -->
            {article.attributes.link ? (
              <a
                href={article.attributes.link}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 font-medium text-sm transition-colors"
              >
                Ver art√≠culo completo
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
              </a>
            ) : (
              <a
                href={`/articles/${article.attributes.slug}`}
                class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 font-medium text-sm transition-colors"
              >
                Leer m√°s
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            )}
          </div>
        </article>
      ))}
    </div>
  )}
  
  <!-- Nota de desarrollo -->
  <div class="mt-8 p-4 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg">
    <div class="flex items-start">
      <svg class="w-5 h-5 text-blue-500 dark:text-blue-400 mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <div>
        <h4 class="text-sm font-medium text-blue-900 dark:text-blue-200">
          Integraci√≥n con Strapi Cloud
        </h4>
        <p class="text-xs text-blue-700 dark:text-blue-300 mt-1">
          Este componente obtiene contenido din√°mico de tu instancia de Strapi Cloud. 
          Configura las variables de entorno para ver el contenido real.
        </p>
      </div>
    </div>
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
