---
import Layout from '../layouts/Layout.astro';

// Datos de proyectos
const proyectos = [
  {
    id: 'ia-educacion',
    titulo: 'Inteligencia Artificial Aplicada a la Educación',
    imagen: 'https://via.placeholder.com/600x400',
    altImagen: 'Investigación sobre Inteligencia Artificial en Educación',
    etiquetas: ['Machine Learning', 'Educational Tech', 'Data Analysis'],
    descripcion: 'Investigación sobre sistemas de tutoría inteligente que adaptan el contenido educativo a las necesidades individuales de los estudiantes.',
    fechaInicio: '2022',
    fechaFin: 'Actualidad',
    financiacion: 'Ministerio de Ciencia e Innovación (PID2021-XXXXX)',
    url: '/proyectos/ia-educacion',
    pdf: '#',
    destacado: true
  },
  {
    id: 'computacion-cuantica',
    titulo: 'Algoritmos Cuánticos para Optimización',
    imagen: 'https://via.placeholder.com/600x400',
    altImagen: 'Investigación sobre Computación Cuántica',
    etiquetas: ['Quantum Computing', 'Algorithms', 'Optimization'],
    descripcion: 'Investigación sobre el uso de algoritmos cuánticos para resolver problemas de optimización combinatoria de manera más eficiente que los algoritmos clásicos.',
    fechaInicio: '2021',
    fechaFin: '2024',
    financiacion: 'European Research Council (ERC-XXXXX)',
    url: '/proyectos/computacion-cuantica',
    pdf: '#',
    destacado: true
  },
  {
    id: 'sistemas-distribuidos',
    titulo: 'Arquitecturas Eficientes para Sistemas Distribuidos',
    imagen: 'https://via.placeholder.com/600x400',
    altImagen: 'Sistemas Distribuidos Energéticamente Eficientes',
    etiquetas: ['Distributed Systems', 'Energy Efficiency', 'Cloud Computing'],
    descripcion: 'Desarrollo de nuevas arquitecturas para sistemas distribuidos con mayor eficiencia energética y rendimiento optimizado.',
    fechaInicio: '2020',
    fechaFin: '2023',
    financiacion: 'Junta de Comunidades de Castilla-La Mancha (JCCM-XXXXX)',
    url: '/proyectos/sistemas-distribuidos',
    pdf: '#',
    destacado: true
  }
];

// Ordenar proyectos: primero los destacados, luego por fecha de inicio (más recientes primero)
const proyectosOrdenados = [...proyectos].sort((a, b) => {
  if (a.destacado && !b.destacado) return -1;
  if (!a.destacado && b.destacado) return 1;
  return parseInt(b.fechaInicio) - parseInt(a.fechaInicio);
});
---

<Layout title="Proyectos de Investigación | Roberto Sánchez Reolid">
	<main class="py-12 px-4">
		<div class="max-w-5xl mx-auto">
			<header class="mb-12 text-center">
				<h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-6">Líneas de Investigación</h1>
				<p class="text-lg text-gray-700 dark:text-gray-300 max-w-3xl mx-auto">
					Aquí puedes explorar mis principales líneas de investigación y proyectos académicos.
					Cada proyecto representa una contribución al conocimiento científico en el campo de la informática y la tecnología.
				</p>
			</header>
			
			<div class="space-y-12">
				{proyectosOrdenados.map((proyecto) => (
					<article id={proyecto.id} class="bg-white dark:bg-gray-800 rounded-xl overflow-hidden shadow-lg transition-transform hover:shadow-xl flex flex-col md:flex-row">
						<div class="md:w-2/5">
							<img 
								src={proyecto.imagen} 
								alt={proyecto.altImagen}
								class="w-full h-64 md:h-full object-cover"
							/>
						</div>
						<div class="p-6 md:w-3/5">
							<div class="flex items-center gap-2 mb-3">
								<span class="text-sm font-medium text-blue-600 dark:text-blue-400">{proyecto.fechaInicio} - {proyecto.fechaFin}</span>
								{proyecto.destacado && (
									<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-300">
										Destacado
									</span>
								)}
							</div>
							
							<h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
								{proyecto.titulo}
							</h2>
							
							<div class="flex flex-wrap gap-2 mb-4">
								{proyecto.etiquetas.map((etiqueta) => (
									<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-300">
										{etiqueta}
									</span>
								))}
							</div>
							
							<p class="text-gray-700 dark:text-gray-300 mb-6">
								{proyecto.descripcion}
							</p>
							
							<div class="mt-auto">
								<p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
									<strong>Financiación:</strong> {proyecto.financiacion}
								</p>
								
								<div class="flex flex-wrap gap-4">
									<a 
										href={proyecto.url} 
										class="btn btn-primary"
									>
										Ver detalles
									</a>
									{proyecto.pdf && (
										<a 
											href={proyecto.pdf} 
											class="btn btn-outline"
											target="_blank" 
											rel="noopener noreferrer"
										>
											Descargar informe
										</a>
									)}
								</div>
							</div>
						</div>
					</article>
				))}
					</p>
					<div class="project-links">
						<a href="#" class="btn btn-sm">Ver publicación</a>
						<a href="#" class="btn btn-outline-sm">Descargar PDF</a>
					</div>
				</div>
			</div>
			
			<!-- Investigación 3 -->
			<div class="project-card">
				<div class="project-image">
					<img src="https://via.placeholder.com/600x400" alt="Investigación sobre Sistemas Distribuidos" />
				</div>
				<div class="project-info">
					<h3>Sistemas Distribuidos Energéticamente Eficientes</h3>
					<div class="project-tags">
						<span>Edge Computing</span>
						<span>Distributed Systems</span>
						<span>Energy Efficiency</span>
					</div>
					<p>
						Desarrollo de arquitecturas y protocolos para sistemas distribuidos con un 
						consumo energético optimizado para aplicaciones de Internet de las Cosas.
					</p>
					<div class="project-links">
						<a href="#" class="btn btn-sm">Ver publicación</a>
						<a href="#" class="btn btn-outline-sm">Descargar PDF</a>
					</div>
				</div>
			</div>
			
			<!-- Investigación 4 -->
			<div class="project-card">
				<div class="project-image">
					<img src="https://via.placeholder.com/600x400" alt="Investigación sobre Seguridad Informática" />
				</div>
				<div class="project-info">
					<h3>Ciberseguridad y Privacidad en la Era Cuántica</h3>
					<div class="project-tags">
						<span>Cryptography</span>
						<span>Quantum Security</span>
						<span>Privacy</span>
					</div>
					<p>
						Análisis de vulnerabilidades en los sistemas de seguridad actuales frente a 
						la computación cuántica y propuestas de soluciones criptográficas post-cuánticas.
					</p>
					<div class="project-links">
						<a href="#" class="btn btn-sm">Ver publicación</a>
						<a href="#" class="btn btn-outline-sm">Descargar PDF</a>
					</div>
				</div>
			</div>
			
			<!-- Proyecto 5 -->
			<div class="project-card">
				<div class="project-image">
					<img src="https://via.placeholder.com/600x400" alt="Proyecto 5" />
				</div>
				<div class="project-info">
					<h3>App de Recetas</h3>
					<div class="project-tags">
						<span>React Native</span>
						<span>Expo</span>
						<span>API Externa</span>
					</div>
					<p>
						Aplicación móvil para buscar, guardar y compartir recetas de cocina
						con funcionalidad offline y sincronización de favoritos.
					</p>
					<div class="project-links">
						<a href="#" class="btn btn-sm">Ver demo</a>
						<a href="#" class="btn btn-outline-sm">Ver código</a>
					</div>
				</div>
			</div>
			
			<!-- Proyecto 6 -->
			<div class="project-card">
				<div class="project-image">
					<img src="https://via.placeholder.com/600x400" alt="Proyecto 6" />
				</div>
				<div class="project-info">
					<h3>Sitio Web Corporativo</h3>
					<div class="project-tags">
						<span>HTML/CSS</span>
						<span>JavaScript</span>
						<span>GSAP</span>
					</div>
					<p>
						Sitio web informativo para una empresa con animaciones fluidas,
						formularios de contacto y optimización SEO.
					</p>
					<div class="project-links">
						<a href="#" class="btn btn-sm">Ver demo</a>
						<a href="#" class="btn btn-outline-sm">Ver código</a>
					</div>
				</div>
			</div>
		</div>
	</section>
</Layout>

<style>
	.projects-page {
		max-width: 1200px;
		margin: 0 auto;
		padding: 2rem 0;
	}
	
	h1 {
		font-size: 2.5rem;
		margin-bottom: 1.5rem;
		color: var(--color-primary);
	}
	
	.intro-text {
		font-size: 1.1rem;
		max-width: 800px;
		margin-bottom: 3rem;
	}
	
	.projects-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
		gap: 2.5rem;
	}
	
	.project-card {
		background: white;
		border-radius: 8px;
		overflow: hidden;
		box-shadow: 0 4px 10px rgba(0,0,0,0.1);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}
	
	.project-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 10px 20px rgba(0,0,0,0.1);
	}
	
	.project-image {
		height: 200px;
		overflow: hidden;
	}
	
	.project-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.5s ease;
	}
	
	.project-card:hover .project-image img {
		transform: scale(1.05);
	}
	
	.project-info {
		padding: 1.5rem;
	}
	
	.project-info h3 {
		font-size: 1.4rem;
		margin-bottom: 0.8rem;
		color: var(--color-dark);
	}
	
	.project-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin-bottom: 1rem;
	}
	
	.project-tags span {
		background-color: rgba(56, 178, 172, 0.1);
		color: var(--color-secondary);
		padding: 0.3rem 0.6rem;
		border-radius: 15px;
		font-size: 0.8rem;
		font-weight: 500;
	}
	
	.project-info p {
		margin-bottom: 1.5rem;
		color: #4a5568;
		font-size: 0.95rem;
	}
	
	.project-links {
		display: flex;
		gap: 1rem;
	}
	
	.btn {
		display: inline-block;
		padding: 0.8rem 1.5rem;
		border-radius: 5px;
		text-decoration: none;
		font-weight: 500;
		transition: all 0.3s ease;
	}
	
	.btn-sm {
		padding: 0.5rem 1rem;
		font-size: 0.9rem;
		background-color: var(--color-primary);
		color: white;
	}
	
	.btn-outline-sm {
		padding: 0.5rem 1rem;
		font-size: 0.9rem;
		border: 1px solid var(--color-primary);
		color: var(--color-primary);
	}
	
	.btn:hover {
		opacity: 0.9;
	}
	
	@media (max-width: 768px) {
		.projects-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
