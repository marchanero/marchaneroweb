    proyecto: "Computación afectiva para mejora de interfaces hombre-máquina",
    entidad: "Proyecto Europeo H2020",
    periodo: "2020 - 2022",
    codigo: "H2020-ICT-2020-1",
    descripcion: "Diseño de interfaces adaptativas basadas en el estado emocional del usuario."
  }
];

const estancias = [
  {
    centro: "Massachusetts Institute of Technology (MIT)",
    departamento: "Computer Science and Artificial Intelligence Laboratory",
    pais: "Estados Unidos",
    periodo: "2018",
    duracion: "6 meses",
    descripcion: "Investigación en algoritmos de aprendizaje por refuerzo para interfaces adaptativas."
  },
  {
    centro: "Universidad de Cambridge",
    departamento: "Department of Computer Science and Technology",
    pais: "Reino Unido",
    periodo: "2017",
    duracion: "3 meses",
    descripcion: "Análisis de señales fisiológicas para reconocimiento emocional."
  }
];

const reconocimientos = [
  {
    titulo: "Premio de Investigación en IA",
    entidad: "Fundación Española para la Ciencia y la Tecnología",
    anio: 2021
  },
  {
    titulo: "Mejor Tesis Doctoral en Informática",
    entidad: "Asociación de Ingeniería Informática",
    anio: 2020
  },
  {
