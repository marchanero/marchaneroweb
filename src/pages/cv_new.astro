---
import Layout from '../layouts/Layout.astro';

const title = "Currículum - Dr. Roberto Sánchez Reolid";
const description = "Currículum vitae académico y profesional del Dr. Roberto Sánchez Reolid, con formación, experiencia docente e investigadora";

// Datos del CV (en producción podrían venir de un CMS o archivo JSON)
const educacion = [
  {
    titulo: "Doctorado en Informática",
    institucion: "Universidad de Castilla-La Mancha",
    periodo: "2015 - 2019",
    descripcion: "Tesis: 'Modelos de aprendizaje automático para la detección de emociones mediante señales fisiológicas'."
  },
  {
    titulo: "Máster en Tecnologías de la Información",
