	<script>
		// Obtener referencias a los elementos de filtrado
		const selectNivel = document.getElementById('nivel') as HTMLSelectElement;
		const selectAnio = document.getElementById('anioAcademico') as HTMLSelectElement;
		const inputBusqueda = document.getElementById('busqueda') as HTMLInputElement;
		
		// Obtener referencias a las secciones
		const seccionTodas = document.getElementById('todas-asignaturas');
		const seccionGrado = document.getElementById('asignaturas-grado');
		const seccionMaster = document.getElementById('asignaturas-master');
		
		// Función para manejar el cambio de nivel
		selectNivel?.addEventListener('change', function() {
			const nivel = this.value;
			
			// Mostrar/ocultar secciones según el nivel seleccionado
			if (nivel === 'todos') {
				seccionTodas?.classList.remove('hidden');
				seccionGrado?.classList.add('hidden');
				seccionMaster?.classList.add('hidden');
			} else if (nivel === 'grado') {
				seccionTodas?.classList.add('hidden');
				seccionGrado?.classList.remove('hidden');
				seccionMaster?.classList.add('hidden');
			} else if (nivel === 'master') {
				seccionTodas?.classList.add('hidden');
				seccionGrado?.classList.add('hidden');
				seccionMaster?.classList.remove('hidden');
			}
		});
		
		// Función para filtrar por búsqueda
		inputBusqueda?.addEventListener('input', function() {
			const busqueda = this.value.toLowerCase();
			const tarjetas = document.querySelectorAll('#todas-asignaturas article');
			
			tarjetas.forEach(tarjeta => {
				const titulo = tarjeta.querySelector('h3')?.textContent?.toLowerCase() || '';
				const codigo = tarjeta.querySelector('p')?.textContent?.toLowerCase() || '';
				
				if (titulo.includes(busqueda) || codigo.includes(busqueda)) {
					(tarjeta as HTMLElement).style.display = '';
				} else {
					(tarjeta as HTMLElement).style.display = 'none';
				}
			});
		});
	</script>
