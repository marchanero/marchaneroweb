  master: asignaturas.filter(a => a.grado.includes('Máster')),
  doctorado: asignaturas.filter(a => a.grado.includes('Doctorado'))
};

// Obtenemos los años académicos únicos
const aniosAcademicos = [...new Set(asignaturas.map(a => a.academicYear))];
---

<Layout title="Docencia | Roberto Sánchez Reolid">
	<main class="py-12 px-4">
		<div class="max-w-5xl mx-auto">
			<header class="mb-12 text-center">
				<h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-6">Docencia</h1>
				<p class="text-lg text-gray-700 dark:text-gray-300 max-w-3xl mx-auto">
					Asignaturas impartidas en la Universidad de Castilla-La Mancha en distintos grados y posgrados.
					Mi labor docente se centra en materias relacionadas con la programación, la inteligencia artificial y el análisis de datos.
				</p>
			</header>
			
			<!-- Filtros para la búsqueda de asignaturas -->
			<div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 mb-8">
				<h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Filtrar asignaturas</h2>
				
				<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
					<!-- Filtro por nivel académico -->
					<div>
						<label for="nivel" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Nivel académico</label>
						<select id="nivel" class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
							<option value="todos">Todos los niveles</option>
							<option value="grado">Grado</option>
							<option value="master">Máster</option>
							<option value="doctorado">Doctorado</option>
						</select>
					</div>
					
					<!-- Filtro por año académico -->
					<div>
						<label for="anioAcademico" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Año académico</label>
						<select id="anioAcademico" class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
							<option value="todos">Todos los años</option>
							{aniosAcademicos.map(anio => (
								<option value={anio}>{anio}</option>
							))}
						</select>
					</div>
					
					<!-- Búsqueda por nombre -->
					<div>
						<label for="busqueda" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Búsqueda</label>
						<input type="text" id="busqueda" placeholder="Buscar por nombre o código..." class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
					</div>
				</div>
			</div>
			
			<!-- Lista de asignaturas -->
			<div id="todas-asignaturas">
				<h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Todas las asignaturas</h2>
				
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
					{asignaturas.map(asignatura => (
						<article class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
							<div class="relative">
								<img 
									src={asignatura.imagen} 
									alt={`Imagen de la asignatura ${asignatura.titulo}`} 
									class="w-full h-48 object-cover"
								/>
								<div class="absolute top-0 right-0 bg-blue-600 dark:bg-blue-500 text-white px-3 py-1 m-2 rounded-lg text-sm font-medium">
									{asignatura.creditos} ECTS
								</div>
							</div>
							
							<div class="p-6">
								<div class="flex items-center mb-2">
									<span class="inline-block bg-gray-200 dark:bg-gray-700 rounded-full px-3 py-1 text-xs font-semibold text-gray-700 dark:text-gray-300 mr-2">
										{asignatura.grado}
									</span>
									<span class="inline-block bg-blue-100 dark:bg-blue-900 rounded-full px-3 py-1 text-xs font-semibold text-blue-800 dark:text-blue-200">
										{asignatura.curso}° curso
									</span>
								</div>
								
								<h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
									{asignatura.titulo}
								</h3>
								
								<p class="text-gray-500 dark:text-gray-400 text-sm mb-4">
									{asignatura.codigo} · {asignatura.cuatrimestre}° cuatrimestre
								</p>
								
								<p class="text-gray-700 dark:text-gray-300 text-sm mb-4 line-clamp-3">
									{asignatura.descripcion}
								</p>
								
								<div class="flex flex-wrap items-center justify-between mt-4">
									<div class="flex items-center text-gray-600 dark:text-gray-400 text-sm">
										<svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
										</svg>
										<span>{asignatura.horario}</span>
									</div>
									
									<a href={asignatura.enlaceMateriales} target="_blank" rel="noopener noreferrer" class="text-blue-600 dark:text-blue-400 text-sm hover:underline">
										Materiales
										<span class="ml-1">→</span>
									</a>
								</div>
							</div>
						</article>
					))}
				</div>
			</div>
			
			<!-- Secciones por nivel académico -->
			<div id="asignaturas-grado" class="mt-16 hidden">
				<h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Grado</h2>
				
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
					{asignaturasPorNivel.grado.map(asignatura => (
						<article class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
							<!-- El contenido es igual al de arriba -->
							<div class="relative">
								<img 
									src={asignatura.imagen} 
									alt={`Imagen de la asignatura ${asignatura.titulo}`} 
									class="w-full h-48 object-cover"
								/>
								<div class="absolute top-0 right-0 bg-blue-600 dark:bg-blue-500 text-white px-3 py-1 m-2 rounded-lg text-sm font-medium">
									{asignatura.creditos} ECTS
								</div>
							</div>
							
							<div class="p-6">
								<h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
									{asignatura.titulo}
								</h3>
								
								<p class="text-gray-500 dark:text-gray-400 text-sm mb-4">
									{asignatura.codigo} · {asignatura.cuatrimestre}° cuatrimestre
								</p>
								
								<p class="text-gray-700 dark:text-gray-300 text-sm mb-4 line-clamp-3">
									{asignatura.descripcion}
								</p>
							</div>
						</article>
					))}
				</div>
			</div>
			
			<!-- Sección de máster -->
			<div id="asignaturas-master" class="mt-16 hidden">
				<h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Máster</h2>
				
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
					{asignaturasPorNivel.master.map(asignatura => (
						<!-- Estructura similar a las anteriores -->
						<article class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
							<div class="relative">
								<img 
									src={asignatura.imagen} 
									alt={`Imagen de la asignatura ${asignatura.titulo}`} 
									class="w-full h-48 object-cover"
								/>
								<div class="absolute top-0 right-0 bg-blue-600 dark:bg-blue-500 text-white px-3 py-1 m-2 rounded-lg text-sm font-medium">
									{asignatura.creditos} ECTS
								</div>
							</div>
							
							<div class="p-6">
								<h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
									{asignatura.titulo}
								</h3>
								
								<p class="text-gray-700 dark:text-gray-300 text-sm mb-4 line-clamp-3">
									{asignatura.descripcion}
								</p>
							</div>
						</article>
					))}
				</div>
			</div>
			
			<!-- JavaScript para la funcionalidad de filtrado -->
			<script>
				// Obtener referencias a los elementos de filtrado
				const selectNivel = document.getElementById('nivel');
				const selectAnio = document.getElementById('anioAcademico');
				const inputBusqueda = document.getElementById('busqueda');
				
				// Obtener referencias a las secciones
				const seccionTodas = document.getElementById('todas-asignaturas');
				const seccionGrado = document.getElementById('asignaturas-grado');
				const seccionMaster = document.getElementById('asignaturas-master');
				
				// Función para manejar el cambio de nivel
				selectNivel.addEventListener('change', function() {
					const nivel = this.value;
					
					// Mostrar/ocultar secciones según el nivel seleccionado
					if (nivel === 'todos') {
						seccionTodas.classList.remove('hidden');
						seccionGrado.classList.add('hidden');
						seccionMaster.classList.add('hidden');
					} else if (nivel === 'grado') {
						seccionTodas.classList.add('hidden');
						seccionGrado.classList.remove('hidden');
						seccionMaster.classList.add('hidden');
					} else if (nivel === 'master') {
						seccionTodas.classList.add('hidden');
						seccionGrado.classList.add('hidden');
						seccionMaster.classList.remove('hidden');
					}
				});
				
				// Función para filtrar por búsqueda (implementación básica)
				inputBusqueda.addEventListener('input', function() {
					const busqueda = this.value.toLowerCase();
					const tarjetas = document.querySelectorAll('#todas-asignaturas article');
					
					tarjetas.forEach(tarjeta => {
						const titulo = tarjeta.querySelector('h3').textContent.toLowerCase();
						const codigo = tarjeta.querySelector('p').textContent.toLowerCase();
						
						if (titulo.includes(busqueda) || codigo.includes(busqueda)) {
							tarjeta.style.display = '';
						} else {
							tarjeta.style.display = 'none';
						}
					});
				});
			</script>
			
			<!-- Sección de materiales complementarios -->
			<section class="mt-20">
				<h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Materiales complementarios</h2>
				
				<div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6">
					<p class="text-gray-700 dark:text-gray-300 mb-6">
						Además de las asignaturas oficiales, pongo a disposición de los estudiantes materiales complementarios
						y recursos adicionales que pueden ser útiles para profundizar en los temas tratados en clase.
					</p>
					
					<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
						<a href="#" class="flex items-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors">
							<div class="flex-shrink-0 bg-blue-100 dark:bg-blue-900 p-3 rounded-full mr-4">
								<svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
								</svg>
							</div>
							<div>
								<h3 class="font-medium text-gray-900 dark:text-white">Guías de estudio</h3>
								<p class="text-sm text-gray-600 dark:text-gray-400">Material complementario para preparar exámenes</p>
							</div>
						</a>
						
						<a href="#" class="flex items-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors">
							<div class="flex-shrink-0 bg-green-100 dark:bg-green-900 p-3 rounded-full mr-4">
								<svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
								</svg>
							</div>
							<div>
								<h3 class="font-medium text-gray-900 dark:text-white">Proyectos de ejemplo</h3>
								<p class="text-sm text-gray-600 dark:text-gray-400">Ejemplos prácticos para inspirar tus propios proyectos</p>
							</div>
						</a>
						
						<a href="#" class="flex items-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors">
							<div class="flex-shrink-0 bg-purple-100 dark:bg-purple-900 p-3 rounded-full mr-4">
								<svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
								</svg>
							</div>
							<div>
								<h3 class="font-medium text-gray-900 dark:text-white">Videotutoriales</h3>
								<p class="text-sm text-gray-600 dark:text-gray-400">Explicaciones paso a paso en formato vídeo</p>
							</div>
						</a>
						
						<a href="#" class="flex items-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors">
							<div class="flex-shrink-0 bg-yellow-100 dark:bg-yellow-900 p-3 rounded-full mr-4">
								<svg class="w-6 h-6 text-yellow-600 dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
								</svg>
